<h1>User Info</h1>
<hr>


<br>
<div style="display: flex; justify-content: center;">
  <a href="/users">
    <button type="button" class="btn btn-success">Back to all users</button>
  </a>
</div>
<br>
  <div style="display: flex; justify-content: center;">
    <div class="card text-bg-secondary border-light mb-3" style="max-width: 940px;">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="<%= @user.image_url %>" class="img-fluid rounded-start" alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h3 class="card-title"><%= @user.name %></h3>
          <br>
          <p class="card-text"><%= @user.email %></p>
        </div>
        
      </div>
    </div>
  </div>


