<h1>All Users</h1>
<hr />
<br>
<br>


<div class="row row-cols-1 row-cols-md-2 g-4 mx-3">
  <% @users.each do |user| %>
    <div class="col-md-3">
      <div class="card">
        <img src="<%= user.image_url %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= user.name %></h5>
          <p><a href="/users/<%= user.id %>">More info</a></p>
        </div>
      </div>
    </div>
  <% end %>
  
</div>


