<section class="vh-100" style="background-color: black;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-light" style="border-radius: 55px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Update Movie</p>

                <%= form_with model: @movie do |form|  %>
                  <div>
                    <%= form.label :name %>
                    <%= form.text_field :name %>
                  </div>
                  <div>
                    <%= form.label :image_url %>
                    <%= form.text_field :image_url %>
                  </div>
                  <div>
                    <%= form.label :description %>
                    <%= form.text_field :description %>
                  </div>
                  <div>
                    <%= form.label :category %>
                    <%= form.text_field :category %>
                  </div>
                  <div>
                    <%= form.label :trailer_url %>
                    <%= form.text_field :trailer_url %>
                  </div>
                  <div>
                    <%= form.submit %>
                  </div>
                <% end%>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                <img src="https://media.tenor.com/Ml3jtp8CAl4AAAAC/gummo-film.gif"
                  class="img-fluid" alt="Sample image">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


